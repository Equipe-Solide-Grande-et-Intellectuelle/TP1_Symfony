{% extends 'base.html.twig' %}

{% block title %}Lyceens index{% endblock %}

{% block body %}
    <h1>Lyceens index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lycee</th>
                <th>Section</th>
                <th>Email</th>
                <th>Tel</th>
                <th>Date_inscription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lyceen in lyceens %}
            <tr>
                <td>{{ lyceen.id }}</td>
                <td>{{ lyceen.lycee }}</td>
                <td>{{ lyceen.section }}</td>
                <td>{{ lyceen.email }}</td>
                <td>{{ lyceen.tel }}</td>
                <td>{{ lyceen.dateInscription ? lyceen.dateInscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_lyceens_show', {'id': lyceen.id}) }}">show</a>
                    <a href="{{ path('app_lyceens_edit', {'id': lyceen.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lyceens_new') }}">Create new</a>
{% endblock %}

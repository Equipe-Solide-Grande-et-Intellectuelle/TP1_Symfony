{% extends 'base.html.twig' %}

{% block title %}Metiers index{% endblock %}

{% block body %}
    <h1>Metiers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Competences</th>
                <th>Activites</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for metier in metiers %}
            <tr>
                <td>{{ metier.id }}</td>
                <td>{{ metier.competences ? metier.competences|join(', ') : '' }}</td>
                <td>{{ metier.activites ? metier.activites|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_metiers_show', {'id': metier.id}) }}">show</a>
                    <a href="{{ path('app_metiers_edit', {'id': metier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_metiers_new') }}">Create new</a>
{% endblock %}
